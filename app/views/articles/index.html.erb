<div class="mid-column"><h1>Learning Ruby on Rails</h1>

<% @articles.reverse_each do |article| %>
  <div>
    <h2 class="index-title"><%= link_to article.title, article %></h2>
    <p><%= article.body.truncate_words(10) %></p>
    <p><%= link_to "Read more", article %>
  </div>
<% end %>


<button class="new"><%= link_to "New Article", new_article_path %></button>

</div>